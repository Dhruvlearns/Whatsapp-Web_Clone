{
    "version": 2,
    "name": "whatsapp-web-clone",
    "builds": [
      {
        "src": "server/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/server/server.js" },
      { "src": "/socket.io/(.*)", "dest": "/server/server.js" },
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "/client/build/index.html" }
    ]
  }
  